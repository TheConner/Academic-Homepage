---
// Component Imports
import LandingHero from '@components/landing-hero/LandingHero.astro';
import Resources from '@components/sections/resources/Resources.astro';
import Contact from '@components/sections/contact/Contact.astro';
import SectionContainer from '@components/layout/SectionContainer.astro';
import PageLayout from 'src/layouts/PageLayout.astro';
import Research from '@components/sections/research/Research.astro';
import Interests from '@components/sections/interests/Interests.astro';

// Data imports
import * as aboutData from '../data/About.json';
import { default as interestsData } from '../data/Interests.json';
import { default as authorData } from '../data/Authors.json';
import { default as researchData } from '../data/Research.json';
import { default as contactData } from '../data/Contact.json';

// Resource data
const resourceData = await Astro.glob('../pages/resources/*.md');
---

<PageLayout>
  <LandingHero aboutData={aboutData} contactData={contactData} />
  <SectionContainer color='#294d46' name='intro'>
    <Interests interestData={interestsData} />
    <Research research={researchData} authors={authorData} />
  </SectionContainer>
  <SectionContainer color='#38485e' name='resources'>
    <Resources resourceData={resourceData} />
  </SectionContainer>
  <SectionContainer color="#96705b">
    <Contact contactData={contactData} />
  </SectionContainer>
</PageLayout>